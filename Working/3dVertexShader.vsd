#version 450

//Attributes that we expect from the vertex buffer
layout (location = 0) in vec3 Position;
layout (location = 1) in vec3 Colour;
layout (location = 2) in vec2 UVs;

out vec3 colour;
out vec2 uvs;

uniform mat4 mvp;

void main()
{
	colour = Colour;
	uvs = UVs;
	gl_Position = mvp* vec4(Position, 1.0);
}