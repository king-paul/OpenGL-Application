#version 450

//Attributes that we expect from the vertex buffer
layout (location = 0) in vec2 Position;

uniform float aspectRatio;
uniform float rotation = 3.14159 * 0.25;

void main()
{	
	float x = Position.x * cos(rotation) - Position.y * sin(rotation);
	float y = Position.x * sin(rotation) + Position.y * cos(rotation);

	//gl_Position = vec4((Position.x / aspectRatio), Position.y, 0, 1);
	gl_Position = vec4(x / aspectRatio, y, 0, 1);
}